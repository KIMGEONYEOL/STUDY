@charset "UTF-8";

/* transform.css
	transform.thml 에 사용할 스타일시트 파일
	transform, transition 속성 테스트용
*/

*{ margin: 0; padding: 0;	} /* 모든 태그들의 바깥여백, 안쪽 여백 모두 없엠*/	

div.myphoto1 {
		position: relative;
		left: 30px;
		top: 30px;
		width: 120px;
		height: 100px;
		padding: 10px;
		background: #cbcb96;
		box-shadow: 1px 1px 5px rgba(0, 0, 0 0.5);
		/* div 태그가 속성이 바뀔 때의 변화 속도를 지정 
			transition: 바뀌는 property 시간설정 시간변화함수;
		*/
		transition: all 3s linear;
		-wetkit-transition: all 3s linear;
		-moz-transition: all 3s linear;
		-o-transition: all 3s linear;
		-ms-transition: all 3s linear;
}

div.myphoto1:hover{
		/* transform: rotate(25deg);	
		-webkit-transform: rotate(25deg);	
		-moz-transform: rotate(25deg);	
		-o-transform: rotate(25deg);	
		-ms-ransform: rotate(25deg); */
/* 		transform: scale(2, 2);	
		-webkit-transform: scale(2, 2);	
		-moz-transform: scale(2, 2);	
		-o-transform: scale(2, 2);	
		-ms-ransform: scale(2, 2);		 */
		transform: skew(15deg, 15deg);	
		-webkit-transform: skew(15deg, 15deg);	
		-moz-transform: skew15deg, 15deg);	
		-o-transform: skew(15deg, 15deg);	
		-ms-ransform: skew(15deg, 15deg);	
		/* 원래 상태로 돌아갈 때의 변화를 지정 */
		transition: all 2s ease-out; /* 뒤로 갈 수록 점점 빨라진다. */
		-wetkit-transition: all 2s ease-out;
		-moz-transition: all 2s ease-out;
		-o-transition: all 2s ease-out;
		-ms-transition: all 2s ease-out;	
}







